@model CategoriasMvc.Models.CategoriaViewModel

<h3>Deletar Categoria</h3>
<h4>Confirma a exclusao desta Categoria?</h4>

<div>
	<hr/>
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(Model => Model.Nome)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(Model => Model.Nome)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(Model => Model.ImagemUrl)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(Model => Model.ImagemUrl)
		</dd>
	</dl>

	<div class="row">
		<div class="form-group col-md-6" style="padding-top: 10px;">
			@if(string.IsNullOrEmpty(@Model.ImagemUrl))
			{
				<img src="~/imagens/nomage1.png" />

			}
			else
			{
				<img src="@Model.ImagemUrl" />
			}
		</div>
	</div>

	<form asp-action="DeletarCategoria">
		<input type="hidden" asp-for="CategoriaId" />
		<div class="form-group" style="paddign-top: 10px">
			<input type="submit" value="Deletar" class="btn btn-danger" />
			<a asp-action="Index" class="btn btn-info">Retornar</a>
		</div>
	</form>
</div>